<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Button.Borderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog.Error">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#d50000</item>
        <item name="colorPrimaryDark">#9b0000</item>
        <item name="colorAccent">#ff5131</item>
    </style>

    <style name="AppTheme.Dialog.Warning">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff9100</item>
        <item name="colorPrimaryDark">#c56200</item>
        <item name="colorAccent">#ffc246</item>
    </style>

    <style name="menu_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="menu_item_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_item_option">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorPrimaryConfig</item>
    </style>

    <style name="AppTheme.Card">
        <item name="android:background">@drawable/rectangle_white_solid</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:padding">@dimen/margin_default</item>
    </style>

    <style name="AppTheme.Card.Detalle">
        <item name="android:background">@drawable/item_detalle_selector</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.Card.DetalleImpresion">
        <item name="android:background">@drawable/item_detalle_selector</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
