<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/general_coordinator_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    tools:context=".features.principal.GeneralActivityOld">

    <ImageView
        android:id="@+id/general_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="ALMACENSOFT"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="-40dp"
            android:background="@drawable/item_background"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_montacargas"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Bienvenido"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="100dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/item_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textStyle="bold"
            android:text="Usuario"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Almacen"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="100dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/item_background"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textStyle="bold"
            android:text="ALMACEN 1"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="120dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/layer_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.bvapp.arcmenulibrary.ArcMenu
        android:id="@+id/general_arc_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        arc:menuChildAnim="true"
        arc:menuClickAnim="true"
        arc:menuGravity="Left_Middle"
        arc:menuImage="@drawable/ic_menu_white"
        arc:menuNormalColor="@color/colorPrimaryDark"
        arc:menuShadowElevation="true"
        arc:menuType="normal"
        arc:menuPressedColor="@color/colorPrimary"/>

</RelativeLayout>